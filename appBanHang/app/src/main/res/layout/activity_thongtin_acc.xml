<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Thongtin_acc">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Thông tin khách hàng"
            android:textSize="30sp"
            android:textColor="#060707"
            android:textStyle="bold"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText

            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:id="@+id/acc_username"
            android:inputType="text"
            android:hint="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:inputType="textPassword"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:id="@+id/acc_password"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <EditText
                android:inputType="textPassword"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:id="@+id/acc_c_password"
                android:hint="Confrim Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:hint="Nhập email"
            android:id="@+id/acc_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:hint="Nhập số điện thoại"
            android:id="@+id/acc_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:hint="Nhập địa chỉ"
            android:id="@+id/acc_diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            ></ProgressBar>
        <LinearLayout
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <Button
                android:layout_marginLeft="50dp"
                android:textColor="#F0EEF4"
                android:text="Sửa"
                android:id="@+id/btn_acc"
                android:background="#347C26"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginLeft="70dp"
                android:textColor="#F0EEF4"
                android:background="#347C26"
                android:text="trở về"
                android:id="@+id/acc_trove"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>